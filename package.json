{
  "name": "caisse-backend",
  "version": "1.0.0",
  "description": "Backend API for Caisse Management System",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "build": "npx prisma generate && tsc",
    "start": "npx prisma db push && node dist/server.js",
    "postinstall": "npx prisma generate",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/jwt": "^7.2.2",
    "@prisma/client": "^5.5.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.9",
    "prisma": "^5.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
